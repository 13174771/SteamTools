<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <DatePicker Header="48" />
  </Design.PreviewWith>

  <Style Selector="DatePicker">
    <Setter Property="YearFormat" Value="yyyy"/>
    <Setter Property="MonthFormat" Value="MM"/>
    <Setter Property="DayFormat" Value="dd"/>
  </Style>

  <Style Selector="DatePicker /template/ TextBlock#DayText">
    <!--<Setter Property="Text" Value="天"/>-->
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="DatePicker /template/ TextBlock#MonthText">
    <!--<Setter Property="Text" Value="月"/>-->
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="DatePicker /template/ TextBlock#YearText">
    <!--<Setter Property="Text" Value="年"/>-->
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="TimePicker /template/ TextBlock#HourTextBlock">
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  <Style Selector="TimePicker /template/ TextBlock#MinuteTextBlock">
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  <Style Selector="TimePicker /template/ TextBlock#PeriodTextBlock">
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
</Styles>
