<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="using:System"
        mc:Ignorable="d"
        d:DesignWidth="450" d:DesignHeight="660"
        Width="450" Height="660"
        MinWidth="450" MinHeight="660"
        MaxWidth="450" MaxHeight="660"
        x:Class="System.Application.UI.Views.Windows.UserProfileWindow"
        xmlns:controls="clr-namespace:System.Application.UI.Views.Controls"
        xmlns:resx="clr-namespace:System.Application.UI.Resx;assembly=System.Application.SteamTools.Client.Desktop"
        xmlns:ccl_services="clr-namespace:System.Application.Services;assembly=System.Application.SteamTools.Client"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="30"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Title}">
  <Panel>
    <Panel.Styles>
      <Style Selector="TextBlock.FormItemLabel">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
      </Style>
      <Style Selector="ComboBox.MarginLeft,RadioButton.MarginLeft">
        <Setter Property="Margin" Value="12,0,0,0"/>
      </Style>
      <Style Selector="ComboBox.AreaShort">
        <Setter Property="Width" Value="72"/>
      </Style>
      <Style Selector="ComboBox.AreaLong">
        <Setter Property="Width" Value="134"/>
      </Style>
      <Style Selector="Button.Secondary">
        <Setter Property="Padding" Value="20 10" />
      </Style>
      <Style Selector="Button.SecondaryMin">
        <Setter Property="Padding" Value="16 8" />
      </Style>
      <Style Selector="Button.MariginButton">
        <Setter Property="Margin" Value="0,0,0,4" />
      </Style>
      <Style Selector="Button.WidthUnify">
        <Setter Property="Width" Value="196" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
      </Style>
    </Panel.Styles>
    <controls:TitleBar/>
    <Panel Margin="{StaticResource ContentMargin}">
      <!--<ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}"/>-->
      <StackPanel VerticalAlignment="Center" IsVisible="{Binding !IsLoading}">
        <DockPanel>
          <Image Source="/Application/UI/Assets/AppResources/avater.jpg" Width="184" Height="184" />
          <StackPanel Orientation="Vertical" Margin="16,0,0,0">
            <Button Content="上传您的头像"
                    Opacity="0"
                    IsEnabled="False"
                    Classes="SecondaryMin MariginButton WidthUnify"/>
            <TextBlock TextWrapping="Wrap"
                       Margin="0,0,0,32"
                       Opacity="0"
                       FontSize="12"
                       Text="从您的设备上传一个文件。图片应为方形，至少为 184px x 184px" />
            <Button Classes="SecondaryMin MariginButton"
                    Content="刷新 Steam 头像" />
            <TextBlock FontSize="12"
                       TextWrapping="Wrap"
                       Text="绑定 Steam 账号后可手动同步刷新使用 Steam 账号头像。" />
          </StackPanel>
        </DockPanel>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="70"/>
          </Grid.ColumnDefinitions>
          <TextBlock Classes="FormItemLabel" Text="昵称" Grid.Row="1"/>
          <TextBox Watermark="请输入昵称" Text="" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                   MaxLength="{Binding Path=NickName,Mode=OneTime,Source={x:Static ccl_services:InputLengthConstants.Current}}"/>
          <TextBlock Classes="FormItemLabel" Text="手机号码" Grid.Row="3"/>
          <TextBox IsReadOnly="True" Focusable="False" Text="155****1234" Grid.Row="3" Grid.Column="1"
                   MaxLength="{Binding Path=PhoneNumber,Mode=OneTime,Source={x:Static ccl_services:InputLengthConstants.Current}}"/>
          <Button Classes="Secondary" Content="修改" Grid.Row="3" Grid.Column="3"/>
          <TextBlock Classes="FormItemLabel" Text="邮箱" Grid.Row="5"/>
          <TextBox IsReadOnly="True" Focusable="False" Watermark="该功能正在开发中，敬请期待" Text="" Grid.Row="5" Grid.Column="1"/>
          <Button Classes="Secondary" Content="绑定" Grid.Row="5" Grid.Column="3" IsEnabled="False"/>
          <TextBlock Classes="FormItemLabel" Text="Steam 账号" Grid.Row="7"/>
          <TextBox IsReadOnly="True" Focusable="False" Watermark="该功能正在开发中，敬请期待" Text="" Grid.Row="7" Grid.Column="1"/>
          <Button Classes="Secondary" Content="绑定" Grid.Row="7" Grid.Column="3" IsEnabled="False"/>
          <TextBlock Classes="FormItemLabel" Text="所在地" Grid.Row="11"/>
          <WrapPanel Orientation="Horizontal" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3">
            <ComboBox Classes="AreaShort" SelectedIndex="0">
              <ComboBoxItem Content="云南"/>
            </ComboBox>
            <ComboBox Classes="MarginLeft AreaShort" SelectedIndex="0">
              <ComboBoxItem Content="临沧"/>
            </ComboBox>
            <ComboBox x:Name="CBArea3" ToolTip.Tip="{Binding #CBArea3.SelectItem}" Classes="MarginLeft AreaLong" SelectedIndex="0">
              <ComboBoxItem Content="双江拉祜族佤族布朗族傣族自治县"/>
            </ComboBox>
          </WrapPanel>
          <TextBlock Classes="FormItemLabel" Text="性别" Grid.Row="9"/>
          <WrapPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3">
            <RadioButton Content="保密" IsChecked="True"/>
            <RadioButton Classes="MarginLeft" Content="男"/>
            <RadioButton Classes="MarginLeft" Content="女"/>
          </WrapPanel>
        </Grid>
        <Button Classes="action WidthUnify"
                HorizontalAlignment="Center"
                Content="保存修改"/>
      </StackPanel>
    </Panel>
    <!--Toast-->
    <controls:ToastMessage VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
  </Panel>
</Window>