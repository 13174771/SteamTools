<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="120" d:DesignHeight="150"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             Cursor="Hand"
             x:Class="System.Application.UI.Views.Controls.FilePicker">
  <Panel>
    <Border BorderThickness="2"
            BorderLineCap="Round"
            BorderLineJoin="Round"
            BorderDashArray="3,3"
            Margin="5"
            Padding="5" 
            ZIndex="1"
            BorderBrush="{DynamicResource ButtonBorderThemeBrush}">
      <StackPanel VerticalAlignment="Center"
                  HorizontalAlignment="Center">
        <ui:SymbolIcon Symbol="DownloadFilled" FontSize="22"/>
        <TextBlock Text="选择文件或拖拽到这里"
                   Margin="5"
                   TextAlignment="Center"
                   TextWrapping="WrapWithOverflow"/>
      </StackPanel>
    </Border>
    <ContentControl Content="{Binding Content}" ZIndex="0"/>
  </Panel>
</UserControl>
