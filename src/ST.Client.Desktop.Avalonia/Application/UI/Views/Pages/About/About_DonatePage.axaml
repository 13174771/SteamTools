<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:System.Application.UI.ViewModels"
             xmlns:resx="using:System.Application.UI.Resx"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:System.Application.Models"
             xmlns:controls="using:System.Application.UI.Views.Controls"
             xmlns:gif="using:AvaloniaGif"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:AboutPageViewModel"
             x:CompileBindings="True"
             x:Class="System.Application.UI.Views.Pages.About_DonatePage">
  <ScrollViewer HorizontalAlignment="Stretch">
    <StackPanel Classes="Settings">
      <StackPanel.Styles>
        <Style Selector="TextBlock">
          <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
      </StackPanel.Styles>
      <Border Classes="Item">
        <StackPanel>
          <TextBlock Text="捐助" Classes="h3"/>
          <TextBlock Text="「Steam++」当前版本的发布离不开大家的支持，如果Steam++有帮助到您，并且您希望我们能长久的保持新功能开发和维护，您可以考虑给我们一点捐助，以使我们更有动力的更新维护Steam++。"/>
        </StackPanel>
      </Border>

      <Border Classes="Item">
        <DockPanel>
          <TextBlock Text="捐助方式"/>
          <StackPanel Orientation="Horizontal"
                      Classes="right"
                      Spacing="10">
            <Button Classes="Hyperlink"
                 Content="爱发电"
                 Command="{Binding OpenBrowserCommand}"
                 CommandParameter="https://afdian.net/@rmbgame"/>
            <Button Classes="Hyperlink"
                 Content="Ko-fi"
                 Command="{Binding OpenBrowserCommand}"
                 CommandParameter="https://ko-fi.com/rmbgame"/>
            <Button Classes="Hyperlink"
                 Content="Patreon"
                 Command="{Binding OpenBrowserCommand}"
                 CommandParameter="https://www.patreon.com/rmbgame"/>
          </StackPanel>
        </DockPanel>
      </Border>


      <Expander>
        <Expander.Header>
          <DockPanel HorizontalAlignment="Stretch">
            <TextBlock Text="捐助记录"/>
            <DatePicker Classes="right"
                        DayVisible="False"
                        SelectedDate="{Binding DonateFliterDate,Mode=TwoWay}"/>
          </DockPanel>
        </Expander.Header>

        <ScrollViewer>
          <ItemsRepeater Items="{Binding DonateList}">
            <ItemsRepeater.Layout>
              <UniformGridLayout ItemsJustification="Start"
                                 MinRowSpacing="10"
                                 MinColumnSpacing="10"
                                 Orientation="Horizontal"
                                 MaximumRowsOrColumns="6" />
            </ItemsRepeater.Layout>
            <ItemsRepeater.ItemTemplate>
              <DataTemplate>
                <Border Classes="paper"
                        Padding="10"
                        Width="250"
                        Background="{DynamicResource ThemeBrushKey}">
                  <DockPanel>
                    <gif:Image2 Source="{Binding Avatar,Converter={StaticResource GuidToUrlConverter}}"
                                FallbackSource="avares://System.Application.SteamTools.Client.Avalonia/Application/UI/Assets/AppResources/avatar.jpg"
                                VerticalAlignment="Center"
                                DecodeWidth="64"
                                Width="64"
                                Height="64"
                                DockPanel.Dock="Left">
                      <gif:Image2.Clip>
                        <EllipseGeometry Rect="0,0,64,64" />
                      </gif:Image2.Clip>
                    </gif:Image2>
                    <StackPanel DockPanel.Dock="Right"
                                Spacing="5"
                                Margin="10">
                      <controls:ScrollingTextBlock Text="{Binding Name}" Classes="h6"/>
                      <controls:ScrollingTextBlock Text="{Binding Amount,StringFormat=￥{0:F2}}"/>
                    </StackPanel>
                  </DockPanel>
                </Border>
              </DataTemplate>
            </ItemsRepeater.ItemTemplate>
          </ItemsRepeater>
        </ScrollViewer>
      </Expander>

    </StackPanel>
  </ScrollViewer>
</UserControl>