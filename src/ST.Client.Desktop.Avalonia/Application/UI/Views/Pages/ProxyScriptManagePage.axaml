<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:System.Application.UI.ViewModels;assembly=System.Application.SteamTools.Client.Desktop"
             xmlns:resx="clr-namespace:System.Application.UI.Resx;assembly=System.Application.SteamTools.Client.Desktop"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:service="clr-namespace:System.Application.Services;assembly=System.Application.SteamTools.Client.Desktop"
             xmlns:pages="clr-namespace:System.Application.UI.Views.Pages"
             xmlns:controls="clr-namespace:System.Application.UI.Views.Controls"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             Background="Transparent"
             x:Class="System.Application.UI.Views.Pages.ProxyScriptManagePage">
    <Panel HorizontalAlignment="Stretch">
        <DockPanel>
            <Border DockPanel.Dock="Top" Classes="paper" Background="{DynamicResource ThemeBrushKey}" Padding="10" Margin="20 0 20 10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Background="Transparent" Cursor="Hand">
                        <DrawingPresenter Width="16"  Drawing="{StaticResource AddDrawing}" />
                    </Button>
                    <Button Background="Transparent" Cursor="Hand">
                        <DrawingPresenter Width="16"  Drawing="{StaticResource RefreshDrawing}" />
                    </Button>

                    <AutoCompleteBox Watermark="搜索脚本" Text="" VerticalAlignment="Center"></AutoCompleteBox>

                    <ToggleSwitch Content="脚本开关"></ToggleSwitch>
                    <!--<Button Content="一键加速"
                            FontSize="16"
                            Height="40"
                            Background="{DynamicResource SystemAccentColor}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"></Button>-->
                </StackPanel>
            </Border>
            <ItemsRepeater Items="{Binding Source={x:Static service:ProxyService.Current},Path=ProxyScripts,Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout ItemsJustification="SpaceEvenly" MinRowSpacing="20"  MaximumRowsOrColumns="6" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border MinWidth="450" Classes="paper" Background="{DynamicResource ThemeBrushKey}" Padding="20 20 20 10">
                            <DockPanel>
                                <Image Source="{Binding Icon}" DockPanel.Dock="Left"></Image>
                                <StackPanel Spacing="8" DockPanel.Dock="Right">
                                    <DockPanel>
                                        <controls:ScrollingTextBlock
                                            Width="{Binding $parent.Width}"
                                            Text="{Binding Name}"
                                            FontSize="16"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource HighlightForegroundBrushKey}"/>

                                        <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock
                                                Text="{Binding Author}"
                                                FontSize="14"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource HighlightForegroundBrushKey}"/>
                                            <TextBlock Text="/ version." FontSize="14" Margin="5 0"></TextBlock>
                                            <TextBlock
                                                Text="{Binding Version}"
                                                FontSize="14"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource HighlightForegroundBrushKey}"/>
                                        </WrapPanel>
                                    </DockPanel>

                                    <TextBlock
                                    Width="{Binding $parent.Width}"
                                    TextWrapping="WrapWithOverflow"
                                    Text="{Binding Description}"
                                    FontSize="12"
                                    Foreground="{DynamicResource HighlightForegroundBrushKey}"/>


                                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Bottom">
                                        <ToggleSwitch OnContent="" OffContent="">
                                        </ToggleSwitch>
                                        <Button Background="Transparent" Cursor="Hand">
                                            <DrawingPresenter Width="20" Drawing="{StaticResource CodeDrawing}" />

                                        </Button>
                                        <Button Background="Transparent" Cursor="Hand">
                                            <DrawingPresenter Width="16"  Drawing="{StaticResource RefreshDrawing}" />

                                        </Button>
                                        <Button Background="Transparent" Cursor="Hand">
                                            <DrawingPresenter Width="16"  Drawing="{StaticResource HomeDrawing}" />
                                        </Button>

                                        <Button Background="Transparent" Cursor="Hand" HorizontalAlignment="Right">
                                            <DrawingPresenter Width="16"  Drawing="{StaticResource DeleteDrawing}" />
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </DockPanel>
    </Panel>
</UserControl>