      <Link>Properties\AssemblyInfo.Version.cs</Link>
    </Compile>
    <Compile Include="..\ST\Properties\InternalsVisibleTo.cs">
      <Link>Properties\InternalsVisibleTo.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
