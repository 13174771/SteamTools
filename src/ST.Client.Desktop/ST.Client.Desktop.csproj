    <RootNamespace>System.Application</RootNamespace>
    <AssemblyName>System.Application.SteamTools.Client.Desktop</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Models\Settings\**" />
    <EmbeddedResource Remove="Models\Settings\**" />
