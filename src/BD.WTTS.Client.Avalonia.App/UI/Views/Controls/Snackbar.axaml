<UserControl x:Class="BD.WTTS.UI.Views.Controls.Snackbar"
			 xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:spp="https://steampp.net/ui"
			 xmlns:s="https://steampp.net/services"
			 xmlns:ui="using:FluentAvalonia.UI.Controls"
             IsVisible="{Binding Source={x:Static s:ToastService.Current},Path=IsVisible,Mode=OneWay}">
	<ui:InfoBar Title="{Binding Source={x:Static s:ToastService.Current},Path=Title,Mode=OneWay}"
				Message="{Binding Source={x:Static s:ToastService.Current},Path=Message,Mode=OneWay}"
				IsOpen="{Binding Source={x:Static s:ToastService.Current},Path=IsVisible,Mode=TwoWay}"
			    IsIconVisible="True"
				IsClosable="True"
				Severity="Informational">
	</ui:InfoBar>
</UserControl>
