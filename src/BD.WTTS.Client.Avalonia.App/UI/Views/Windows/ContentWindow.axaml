<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:spp="https://steampp.net/ui"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BD.WTTS.UI.Views.Windows.ContentWindow"
		xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
		xmlns:wnd="using:FluentAvalonia.UI.Windowing"
		xmlns:ui="using:FluentAvalonia.UI.Controls"
        Title="ContentWindow"
		x:DataType="spp:ContentWindowViewModel"
		x:CompileBindings="True">
	<Grid RowDefinitions="Auto, *">
		<Grid
            Name="TitleBarHost"
            Height="{StaticResource TitleBarHeight}"
            VerticalAlignment="Center"
            Background="Transparent"
            ColumnDefinitions="Auto,Auto,*,Auto">

			<Image
                Name="WindowIcon"
                Grid.Column="0"
                Width="48"
                Height="48"
                Margin="10,4"
                DockPanel.Dock="Left"
                IsHitTestVisible="False"
                Source="/UI/Assets/ApplicationIcon.ico" />

			<TextBlock
				Grid.Column="1"
				VerticalAlignment="Center"
				FontSize="14"
				IsHitTestVisible="False"
				Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />

			<Separator
                Grid.Column="3"
                Height="18"
                Margin="10,0"
                VerticalAlignment="Center"
                Background="{DynamicResource ButtonBorderBrush}"
                Classes="Vertical" />
		</Grid>
		<ContentControl DataContext="{Binding PageViewModel}">
			<ContentControl.DataTemplates>
				<DataTemplate DataType="spp:SettingsPageViewModel">
					<spp:SettingsPage/>
				</DataTemplate>
			</ContentControl.DataTemplates>
		</ContentControl>
	</Grid>
</Window>
