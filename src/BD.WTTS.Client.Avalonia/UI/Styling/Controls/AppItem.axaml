<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:spp="https://steampp.net/ui"
    xmlns:ui="using:FluentAvalonia.UI.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel>
                <spp:AppItem
                    Title="Wo Long: Fallen Dynasty （卧龙：苍天陨落）1111111111111111111111111111"
                    MaxWidth="300"
                    Classes="Vertical"
                    Description="This is a description of whatver this does"
                    Status="免费下载">
                    <spp:AppItem.Icon>
                        <ui:BitmapIcon UriSource="avares://BD.WTTS.Client.Avalonia/UI/Assets/back.png" />
                    </spp:AppItem.Icon>
                </spp:AppItem>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="spp|AppItem">
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="{StaticResource ButtonPadding}" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <Border
                        Name="LayoutRoot"
                        Padding="12"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid
                            MinHeight="40"
                            ColumnDefinitions="Auto,*,Auto,Auto"
                            RowDefinitions="Auto,Auto,Auto">
                            <Viewbox
                                Name="IconHost"
                                Grid.RowSpan="2"
                                Width="24"
                                Height="24"
                                Margin="8,4,12,4"
                                VerticalAlignment="Center">
                                <ContentPresenter Content="{TemplateBinding Icon}" />
                            </Viewbox>

                            <TextBlock
                                Name="HeaderText"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Classes="BaseTextBlockStyle"
                                Text="{TemplateBinding Title}"
                                TextTrimming="CharacterEllipsis" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Top"
                                Classes="CaptionTextBlockStyle"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{TemplateBinding Description}"
                                TextWrapping="Wrap" />

                            <ui:SymbolIcon
                                Name="Chevron"
                                Grid.RowSpan="2"
                                Grid.Column="3"
                                Margin="8,4"
                                VerticalAlignment="Center"
                                FontSize="20" />
                        </Grid>
                    </Border>

                    <ContentPresenter
                        Name="Tags"
                        Grid.Row="2"
                        Grid.ColumnSpan="4"
                        Padding="12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1,0,1,1"
                        Content="{TemplateBinding Tags}" />
                </StackPanel>

            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="spp|AppItem /template/ Viewbox#IconHost">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="spp|AppItem /template/ ui|SymbolIcon#Chevron">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="spp|AppItem /template/ ContentPresenter#ExpandedContentPresenter">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="spp|AppItem /template/ Border#LayoutRoot:pointerover">
        <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
        <Setter Property="BoxShadow" Value="{StaticResource InfoBoxShadow}" />
    </Style>
    <Style Selector="spp|AppItem:pressed /template/ Border#LayoutRoot:pointerover">
        <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}" />
    </Style>

    <Style Selector="spp|AppItem:icon /template/ Viewbox#IconHost">
        <Setter Property="IsVisible" Value="True" />
    </Style>

    <Style Selector="spp|AppItem:navigates /template/ ui|SymbolIcon#Chevron">
        <Setter Property="IsVisible" Value="True" />
        <Setter Property="Symbol" Value="ChevronRight" />
    </Style>

    <Style Selector="spp|AppItem:desc /template/ TextBlock#HeaderText">
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Grid.RowSpan" Value="1" />
    </Style>

    <Style Selector="spp|AppItem:expands /template/ ui|SymbolIcon#Chevron">
        <Setter Property="IsVisible" Value="True" />
        <Setter Property="Symbol" Value="ChevronDown" />
    </Style>

    <Style Selector="spp|AppItem:expanded /template/ ui|SymbolIcon#Chevron">
        <Setter Property="Symbol" Value="ChevronUp" />
    </Style>

    <Style Selector="spp|AppItem:expanded /template/ ContentPresenter#ExpandedContentPresenter">
        <Setter Property="IsVisible" Value="True" />
        <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BottomCornerRadiusFilterConverter}}" />
    </Style>

    <Style Selector="spp|AppItem:expanded /template/ Border#LayoutRoot">
        <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TopCornerRadiusFilterConverter}}" />
    </Style>

    <Style Selector="spp|AppItem:not(:expands):expanded /template/ ContentPresenter#ExpandedContentPresenter">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="spp|AppItem /template/ ContentPresenter#ActionButton ComboBox">
        <Setter Property="MinWidth" Value="150" />
    </Style>

    <!--  Vertical Style  -->
    <Style Selector="spp|AppItem.Vertical">
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Name="LayoutRoot"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    ClipToBounds="True"
                    CornerRadius="{StaticResource OverlayCornerRadius}">
                    <Grid RowDefinitions="*,Auto">
                        <Border Background="Transparent">
                            <Viewbox Name="IconHost">
                                <ContentPresenter Content="{TemplateBinding Icon}" />
                            </Viewbox>
                        </Border>

                        <Border Grid.Row="1" Padding="10,5">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Classes="BaseTextBlockStyle"
                                    FontWeight="Bold"
                                    MaxLines="2"
                                    Text="{TemplateBinding Title}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />

                                <ContentPresenter
                                    Margin="0,5"
                                    Content="{TemplateBinding Tags}"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    IsVisible="{TemplateBinding Tags,
                                                                Converter={StaticResource IsNullConverter},
                                                                ConverterParameter=invert}"
                                    TextWrapping="Wrap" />

                                <TextBlock
                                    Margin="0,5"
                                    VerticalAlignment="Top"
                                    Classes="CaptionTextBlockStyle"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{TemplateBinding Description}"
                                    TextWrapping="Wrap" />

                                <WrapPanel Orientation="Horizontal">
                                    <Border
                                        Margin="0,5"
                                        Padding="8,5"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlFillColorDefaultBrush}"
                                        ClipToBounds="True"
                                        CornerRadius="{StaticResource ControlCornerRadius}">
                                        <TextBlock
                                            VerticalAlignment="Top"
                                            FontSize="12"
                                            Text="{TemplateBinding Status}"
                                            TextWrapping="Wrap" />
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
