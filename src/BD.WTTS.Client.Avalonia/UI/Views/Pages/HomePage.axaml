    <spp:ContentLoader IsLoading="False">
        <StackPanel MaxWidth="1080" Spacing="5">
            <spp:Snackbar
                Title="{Binding Path=Res.Notice_Tray_Title, Mode=OneWay, Source={x:Static s:ResourceService.Current}}"
                VerticalAlignment="Top"
                IsClosable="False"
                IsOpen="True"
                IsVisible="{Binding !!!MainWindow2.PluginCount, Mode=OneWay, Source={x:Static s:IViewModelManager.Instance}}"
                Message="检测到你没有安装插件，请去下载插件即可使用更多功能。"
                Severity="Warning" />

            <StackPanel Margin="0,15,0,0" Spacing="8">
                <TextBlock VerticalAlignment="Top" Classes="TitleTextBlockStyle">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}，欢迎使用 Watt Toolkit">
                            <Binding
                                Mode="OneWay"
                                Path="User.NickName"
                                Source="{x:Static s:UserService.Current}" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <StackPanel
                    IsVisible="{Binding Source={x:Static s:SteamConnectService.Current}, Path=CurrentSteamUser, Mode=OneWay, Converter={StaticResource IsNullConverter}, ConverterParameter=invert}"
                    Orientation="Horizontal"
                    Spacing="8">
                    <TextBlock
                        VerticalAlignment="Center"
                        Classes="SubtitleTextBlockStyle"
                        Text="Steam 当前登录账号:" />
                    <spp:Image2
                        Width="32"
                        Height="32"
                        Source="{Binding Source={x:Static s:SteamConnectService.Current}, Path=CurrentSteamUser.AvatarMedium, Mode=OneWay}"
                        Stretch="Uniform">
                        <spp:Image2.Clip>
                            <EllipseGeometry Rect="0,0,32,32" />
                        </spp:Image2.Clip>
                    </spp:Image2>

                    <TextBlock
                        VerticalAlignment="Center"
                        Classes="SubtitleTextBlockStyle"
                        Text="{Binding Source={x:Static s:SteamConnectService.Current}, Path=CurrentSteamUser.SteamNickName, Mode=OneWay}" />
                    <TextBlock
                        VerticalAlignment="Center"
                        Classes="SubtitleTextBlockStyle"
                        IsVisible="{Binding Source={x:Static s:SteamConnectService.Current}, Path=CurrentSteamUser.IPCountry, Mode=OneWay, Converter={StaticResource IsNullConverter}, ConverterParameter=invert}"
                        Text="{Binding Source={x:Static s:SteamConnectService.Current}, Path=CurrentSteamUser.IPCountry, Mode=OneWay, StringFormat={}({0})}" />

                    <!--<TextBlock VerticalAlignment="Center" Classes="SubtitleTextBlockStyle">
