  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Aigio.Avalonia.AppCenter" Version="4.2.0" />
    <PackageReference Include="Aigio.Avalonia.AppCenter.Analytics" Version="4.2.0" />
