<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="BD.WTTS.UI.Views.Pages.ShowSteamDataPage"
    x:CompileBindings="True"
    x:DataType="spp:ShowSteamDataViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://steampp.net/services"
    xmlns:spp="https://steampp.net/ui"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <spp:IsReadOnlyPasswordBoxConverter x:Key="IsReadOnlyPasswordBoxConverter" />
    </UserControl.Resources>
    <UserControl.Styles>
        <Style Selector="Border">
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </UserControl.Styles>
    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        MinWidth="600"
        Padding="20"
        VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" Spacing="10">
            <Border>
                <StackPanel Spacing="5">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="{ReflectionBinding Source={x:Static s:ResourceService.Current},
                                                     Path=Res.LocalAuth_ShowAuthInfo,
                                                     Mode=OneWay}"
                            TextTrimming="CharacterEllipsis"
                            VerticalAlignment="Center" />
                        <ToggleButton IsChecked="{Binding ShowDetail}" VerticalAlignment="Center">
                            <ToggleButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <ui:FontIcon
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="16"
                                        Glyph="&#xE18B;"
                                        VerticalAlignment="Center" />
                                    <TextBlock Text="{ReflectionBinding Path=Res.ShowHide, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                                </StackPanel>
                            </ToggleButton.Content>
                        </ToggleButton>
                    </StackPanel>
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{ReflectionBinding Source={x:Static s:ResourceService.Current},
                                                 Path=Res.LocalAuth_ShowSteamAuthTip2}"
                        TextWrapping="Wrap"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Border>
            <Border>
                <DockPanel>
                    <TextBlock Text="{ReflectionBinding Source={x:Static s:ResourceService.Current}, Path=Res.LocalAuth_SteamUUID}" VerticalAlignment="Center" />
                    <TextBox
                        IsReadOnly="True"
                        Margin="5,0,0,0"
                        PasswordChar="{ReflectionBinding ShowDetail,
                                                         Converter={StaticResource IsReadOnlyPasswordBoxConverter},
                                                         ConverterParameter=invert}"
                        Text="{Binding DeviceId}" />
                </DockPanel>
            </Border>
            <Border>
                <DockPanel>
                    <TextBlock Text="{ReflectionBinding Source={x:Static s:ResourceService.Current}, Path=Res.RecoveryCode}" VerticalAlignment="Center" />
                    <TextBox
                        IsReadOnly="True"
                        Margin="5,0,0,0"
                        PasswordChar="{ReflectionBinding ShowDetail,
                                                         Converter={StaticResource IsReadOnlyPasswordBoxConverter},
                                                         ConverterParameter=invert}"
                        Text="{Binding RecoverCode}" />
                </DockPanel>
            </Border>
            <Border>
                <StackPanel Spacing="10">
                    <TextBlock HorizontalAlignment="Center" Text="SteamGuard" />
                    <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.LocalAuth_ShowSteamAuthTip1, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                    <TextBox
                        Height="400"
                        IsReadOnly="True"
                        PasswordChar="{ReflectionBinding ShowDetail,
                                                         Converter={StaticResource IsReadOnlyPasswordBoxConverter},
                                                         ConverterParameter=invert}"
                        Text="{Binding SteamData}"
                        Width="500" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
