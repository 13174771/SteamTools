<UserControl
    x:Class="BD.WTTS.UI.Views.Pages.SteamLoginImportPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://steampp.net/services"
    xmlns:spp="https://steampp.net/ui"
    d:DesignHeight="300"
    d:DesignWidth="600"
    x:CompileBindings="True"
    x:DataType="spp:SteamLoginImportViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,*">
        <spp:Stepper SelectedIndex="{Binding SelectIndex}">
            <spp:StepperItem Content="{ReflectionBinding Path=Res.Steam_Login, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
            <spp:StepperItem Content="{ReflectionBinding Path=Res.Steam_EmailCode, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
            <spp:StepperItem Content="{ReflectionBinding Path=Res.Steam_BindTel, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
            <spp:StepperItem Content="{ReflectionBinding Path=Res.TelCode, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
            <spp:StepperItem Content="{ReflectionBinding Path=Res.Btn_Text_Complete, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
        </spp:Stepper>

        <Carousel Grid.Row="1">
            <spp:ContentLoader
                MinWidth="600"
                MinHeight="320"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsLoading="{Binding IsLoading}"
                IsShowNoResultText="False">
                <Grid
                    MinWidth="600"
                    MinHeight="300"
                    Margin="10"
                    IsVisible="{Binding !IsLoading}">
                    <StackPanel
                        MinWidth="600"
                        Margin="0,50,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                        <TextBox
                            MaxWidth="300"
                            HorizontalContentAlignment="Center"
                            Text="{Binding UserNameText}"
                            Watermark="{ReflectionBinding Path=Res.Steam_User,
                                                          Mode=OneWay,
                                                          Source={x:Static s:ResourceService.Current}}" />
                        <TextBox
                            Name="PasswordText"
                            MaxWidth="300"
                            HorizontalContentAlignment="Center"
                            Classes="revealPasswordButton"
                            PasswordChar="{StaticResource PasswordChar}"
                            Text="{Binding PasswordText}"
                            Watermark="{ReflectionBinding Path=Res.Steam_Password,
                                                          Mode=OneWay,
                                                          Source={x:Static s:ResourceService.Current}}" />
                    </StackPanel>
                    <Button
                        MinWidth="280"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        HorizontalContentAlignment="Center"
                        Command="{ReflectionBinding LoginSteamImport}"
                        Content="{ReflectionBinding Path=Res.Login,
                                                    Mode=OneWay,
                                                    Source={x:Static s:ResourceService.Current}}" />
                </Grid>
            </spp:ContentLoader>
            <spp:ContentLoader
                MinWidth="600"
                MinHeight="320"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsLoading="{Binding IsLoading}"
                IsShowNoResultText="False">
                <Grid
                    MinWidth="600"
                    MinHeight="300"
                    Margin="10"
                    IsVisible="{Binding !IsLoading}">
                    <StackPanel Margin="0,50,0,0" VerticalAlignment="Top">
                        <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.EmailCode, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                        <TextBox
                            Name="EmailAuthText"
                            MaxWidth="200"
                            HorizontalContentAlignment="Center"
                            Text="{Binding EmailAuthText}"
                            Watermark="{ReflectionBinding Path=Res.EmailCode,
                                                          Mode=OneWay,
                                                          Source={x:Static s:ResourceService.Current}}" />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock
                            Margin="10,0"
                            HorizontalAlignment="Center"
                            Text="{Binding EmailDomainText}" />
                        <TextBlock
                            Margin="10,0"
                            HorizontalAlignment="Center"
                            Text="{ReflectionBinding Path=Res.LocalAuth_EmailCodeTip,
                                                     Mode=OneWay,
                                                     Source={x:Static s:ResourceService.Current}}"
                            TextAlignment="Center"
                            TextWrapping="WrapWithOverflow" />
                        <Button
                            MinWidth="280"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Command="{ReflectionBinding LoginSteamImport}"
                            Content="{ReflectionBinding Path=Res.Continue,
                                                        Mode=OneWay,
                                                        Source={x:Static s:ResourceService.Current}}" />
                    </StackPanel>
                </Grid>
            </spp:ContentLoader>
            <spp:ContentLoader
                MinWidth="600"
                MinHeight="320"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsLoading="{Binding IsLoading}"
                IsShowNoResultText="False">
                <Grid
                    MinWidth="600"
                    MinHeight="300"
                    Margin="10"
                    IsVisible="{Binding !IsLoading}">
                    <StackPanel Margin="0,50,0,0" VerticalAlignment="Top">
                        <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.User_Phone, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                        <TextBox
                            Name="PhoneNumberText"
                            MaxWidth="200"
                            HorizontalContentAlignment="Center"
                            Text="{Binding PhoneNumberText}"
                            Watermark="123-4567-8910" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <TextBlock
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="{ReflectionBinding Path=Res.Steam_EmailConfirmation,
                                                     Mode=OneWay,
                                                     Source={x:Static s:ResourceService.Current}}" />
                        <Button
                            MinWidth="280"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Command="{ReflectionBinding LoginSteamImport}"
                            Content="{ReflectionBinding Path=Res.Continue,
                                                        Mode=OneWay,
                                                        Source={x:Static s:ResourceService.Current}}" />
                    </StackPanel>
                </Grid>
            </spp:ContentLoader>
            <spp:ContentLoader
                MinWidth="600"
                MinHeight="320"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsLoading="{Binding IsLoading}"
                IsShowNoResultText="False">
                <Grid
                    MinWidth="600"
                    MinHeight="300"
                    Margin="10"
                    IsVisible="{Binding !IsLoading}">
                    <StackPanel Margin="0,50,0,0" VerticalAlignment="Top">
                        <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.RecoveryCode, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />

                        <TextBox
                            MaxWidth="200"
                            IsReadOnly="True"
                            Text="{Binding RevocationCodeText, Mode=OneWay}" />
                        <TextBox
                            Name="PhoneCodeText"
                            MaxWidth="200"
                            HorizontalContentAlignment="Center"
                            Text="{Binding PhoneCodeText}"
                            Watermark="{ReflectionBinding Path=Res.SMSCode,
                                                          Mode=OneWay,
                                                          Source={x:Static s:ResourceService.Current}}" />
                        <CheckBox
                            MinWidth="200"
                            HorizontalAlignment="Center"
                            Content="{ReflectionBinding Path=Res.RecoveryCode_Remember,
                                                        Mode=OneWay,
                                                        Source={x:Static s:ResourceService.Current}}" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <TextBlock
                            Margin="10,0"
                            HorizontalAlignment="Center"
                            Text="{ReflectionBinding Path=Res.LocalAuth_SMSCodeTip,
                                                     Mode=OneWay,
                                                     Source={x:Static s:ResourceService.Current}}"
                            TextAlignment="Center"
                            TextWrapping="WrapWithOverflow" />
                        <Button
                            MinWidth="280"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Command="{ReflectionBinding LoginSteamImport}"
                            Content="{ReflectionBinding Path=Res.Continue,
                                                        Mode=OneWay,
                                                        Source={x:Static s:ResourceService.Current}}" />
                    </StackPanel>
                </Grid>
            </spp:ContentLoader>
            <Grid
                MinWidth="600"
                MinHeight="300"
                Margin="10"
                IsVisible="{Binding !IsLoading}">
                <TextBlock
                    MaxWidth="300"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Text="{ReflectionBinding Path=Res.LocalAuth_SteamUserImportSuccess,
                                             Mode=OneWay,
                                             Source={x:Static s:ResourceService.Current}}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <Button
                    MinWidth="280"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Command="{ReflectionBinding Reset}"
                    Content="{ReflectionBinding Path=Res.Continue,
                                                Mode=OneWay,
                                                Source={x:Static s:ResourceService.Current}}" />
            </Grid>
        </Carousel>
    </Grid>
</UserControl>
