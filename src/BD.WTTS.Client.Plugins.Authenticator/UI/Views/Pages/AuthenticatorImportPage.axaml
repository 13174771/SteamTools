<UserControl
    x:Class="BD.WTTS.UI.Views.Pages.AuthenticatorImportPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://steampp.net/services"
    xmlns:spp="https://steampp.net/ui"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="spp:AuthenticatorImportPageViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{ReflectionBinding #InnerNavFrame.GoBack}"
                Content="{StaticResource Back}"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                IsVisible="{ReflectionBinding #InnerNavFrame.CanGoBack}"
                Theme="{StaticResource TransparentButton}" />
            <TextBlock
                VerticalAlignment="Center"
                Text="Title"
                Theme="{StaticResource BodyStrongTextBlockStyle}" />
        </StackPanel>
        <ItemsRepeater ItemsSource="{Binding AuthenticatorImportMethods}">
            <ItemsRepeater.Layout>
                <UniformGridLayout
                    ItemsJustification="SpaceAround"
                    MinColumnSpacing="5"
                    MinRowSpacing="5" />
            </ItemsRepeater.Layout>
            <ItemsRepeater.ItemTemplate>
                <DataTemplate DataType="spp:AuthenticatorImportMethod">
                    <spp:AppItem
                        Title="{Binding Name, Mode=OneTime}"
                        MaxWidth="200"
                        Classes="Vertical"
                        Cursor="Hand"
                        Description="{Binding Description, Mode=OneTime}"
                        Tag="{Binding PageType}"
                        Tapped="AuthenticatorImportPage_Tapped" />
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
        <ui:Frame x:Name="InnerNavFrame" Grid.Row="1" />
    </Grid>
</UserControl>
