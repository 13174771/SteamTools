<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="500" d:DesignHeight="375"
        Width="500" Height="375"
        MinWidth="500" MinHeight="375"
        CanResize="False"
        x:Class="System.Application.UI.Views.MainWindow"
        Icon="/Assets/Setup.ico"
        WindowStartupLocation="CenterScreen"
        Title="Watt Toolkit Installer Setup">
  <Grid>
    <Label Margin="12,0,0,0" Content="欢迎使用 Watt Toolkit 安装向导" FontSize="17" />
    <Image Source="/Assets/Setup.ico" Height="48" Width="48" Margin="0,4,7,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    <Grid Background="#f0f0f0" Margin="0,62,0,0">
      <Label Content="安装程序将引导您完成在您的计算机上安装 Watt Toolkit 所需的步骤。" FontSize="14" Margin="12" />
      <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="12">
        <Button MinWidth="88" HorizontalContentAlignment="Center" Content="上一步" Margin="0,0,12,0" />
        <Button MinWidth="88" HorizontalContentAlignment="Center" Content="下一步" Margin="0,0,12,0" />
        <Button MinWidth="88" HorizontalContentAlignment="Center" Content="取消" />
      </StackPanel>
    </Grid>
  </Grid>
</Window>