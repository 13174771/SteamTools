<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:xamarin="http://schemas.xamarin.com/android/xamarin/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/shared_toolbar" />

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_window_background">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUISettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="8dp"
        android:textColor="?colorPrimary"
        android:textSize="16sp"
        tools:text="界面设置"
        xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

      <FrameLayout
        android:id="@+id/layoutRootUISettingsLanguage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_language_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <LinearLayout
            android:id="@+id/layoutUISettingsLanguage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvUISettingsLanguage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_primary"
              android:textSize="16sp"
              tools:text="语言"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvUISettingsLanguageValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_secondary"
              tools:text="Auto"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
        android:id="@+id/layoutRootUISettingsTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_dark_mode_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <LinearLayout
            android:id="@+id/layoutUISettingsTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvUISettingsTheme"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_primary"
              android:textSize="16sp"
              tools:text="主题"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvUISettingsThemeValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_secondary"
              tools:text="跟随系统"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGeneralSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="8dp"
        android:textColor="?colorPrimary"
        android:textSize="16sp"
        tools:text="通用设置"
        xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

      <FrameLayout
        android:id="@+id/layoutRootGeneralSettingsIsAutoCheckUpdate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_update_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGeneralSettingsIsAutoCheckUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:text="启动时自动检查更新"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

          <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

          <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swGeneralSettingsIsAutoCheckUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:clickable="false"
            android:focusable="false"
            tools:checked="true"
            xamarin:managedType="Google.Android.Material.SwitchMaterial.SwitchMaterial" />
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
        android:id="@+id/layoutRootGeneralSettingsUpdateChannel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_cloud_download_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <LinearLayout
            android:id="@+id/layoutGeneralSettingsUpdateChannel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvGeneralSettingsUpdateChannel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_primary"
              android:textSize="16sp"
              tools:text="下载更新渠道"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvGeneralSettingsUpdateChannelValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_secondary"
              tools:text="Auto"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
        android:id="@+id/layoutRootGeneralSettingsCaptureScreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_screenshot_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvGeneralSettingsCaptureScreen"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_primary"
              android:textSize="16sp"
              tools:text="屏幕捕获"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvGeneralSettingsCaptureScreenDesc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_secondary"
              tools:text="允许其他应用程序捕获你的屏幕"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
          </LinearLayout>

          <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

          <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swGeneralSettingsCaptureScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:clickable="false"
            android:focusable="false"
            xamarin:managedType="Google.Android.Material.SwitchMaterial.SwitchMaterial" />
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
        android:id="@+id/layoutRootGeneralSettingsStorageSpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_folder_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <LinearLayout
            android:id="@+id/layoutGeneralSettingsStorageSpace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvGeneralSettingsStorageSpace"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_primary"
              android:textSize="16sp"
              tools:text="存储空间"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvGeneralSettingsStorageSpaceValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_secondary"
              tools:text="缓存文件已占用 xx.xx KB"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
        android:id="@+id/layoutRootOSAppDetailsSettings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_settings_applications_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvOSAppDetailsSettings"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_primary"
              android:textSize="16sp"
              tools:text="应用详情(系统设置)"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="APPLICATION_DETAILS_SETTINGS"
              android:textColor="@color/text_secondary"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
        android:id="@+id/layoutRootOSAppNotificationSettings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height_large"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/baseline_notifications_black_24"
            app:tint="@color/icon_background"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvOSAppNotificationSettings"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_primary"
              android:textSize="16sp"
              tools:text="应用通知(系统设置)"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="APP_NOTIFICATION_SETTINGS"
              android:textColor="@color/text_secondary"
              xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
          </LinearLayout>

          <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

          <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swOSAppNotificationSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:clickable="false"
            android:focusable="false"
            tools:checked="true"
            xamarin:managedType="Google.Android.Material.SwitchMaterial.SwitchMaterial" />
        </LinearLayout>
      </FrameLayout>

      <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_vertical_margin" />
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</LinearLayout>
