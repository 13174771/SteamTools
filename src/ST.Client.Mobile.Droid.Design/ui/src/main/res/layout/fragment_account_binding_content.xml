<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:xamarin="http://schemas.xamarin.com/android/xamarin/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xamarin:managedType="AndroidX.ConstraintLayout.Widget.ConstraintLayout">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_vertical_begin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="@dimen/activity_horizontal_margin"
    xamarin:managedType="AndroidX.ConstraintLayout.Widget.Guideline" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_vertical_end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_end="@dimen/activity_horizontal_margin"
    xamarin:managedType="AndroidX.ConstraintLayout.Widget.Guideline" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnAccountBind0"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/text_field_outlined_top_space_height"
    android:textAllCaps="false"
    android:textSize="@dimen/input_font_size_min"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind0"
    app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind0"
    tools:text="绑定"
    xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/layoutAccountBind0"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:clickable="false"
    android:enabled="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:layout_constraintEnd_toStartOf="@+id/btnAccountBind0"
    app:layout_constraintStart_toEndOf="@+id/ivIconAccountBind0"
    app:layout_constraintTop_toTopOf="parent"
    xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/tbAccountBind0"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="false"
      android:enabled="false"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:inputType="text"
      tools:hint="未绑定"
      xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

  </com.google.android.material.textfield.TextInputLayout>

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/ivIconAccountBind0"
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind0"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind0"
    app:tint="@color/icon_background"
    tools:src="@drawable/icon_steam_24"
    xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnAccountBind1"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/text_field_outlined_top_space_height"
    android:textAllCaps="false"
    android:textSize="@dimen/input_font_size_min"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind1"
    app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind1"
    tools:text="绑定"
    xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/layoutAccountBind1"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:clickable="false"
    android:enabled="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:layout_constraintEnd_toStartOf="@+id/btnAccountBind1"
    app:layout_constraintStart_toEndOf="@+id/ivIconAccountBind1"
    app:layout_constraintTop_toBottomOf="@+id/layoutAccountBind0"
    xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/tbAccountBind1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="false"
      android:enabled="false"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:inputType="text"
      tools:hint="未绑定"
      xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

  </com.google.android.material.textfield.TextInputLayout>

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/ivIconAccountBind1"
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind1"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind1"
    app:tint="@color/icon_background"
    tools:src="@drawable/icon_xbox_24"
    xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnAccountBind2"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/text_field_outlined_top_space_height"
    android:textAllCaps="false"
    android:textSize="@dimen/input_font_size_min"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind2"
    app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind2"
    tools:text="绑定"
    xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/layoutAccountBind2"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:clickable="false"
    android:enabled="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:layout_constraintEnd_toStartOf="@+id/btnAccountBind2"
    app:layout_constraintStart_toEndOf="@+id/ivIconAccountBind2"
    app:layout_constraintTop_toBottomOf="@+id/layoutAccountBind1"
    xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/tbAccountBind2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="false"
      android:enabled="false"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:inputType="text"
      tools:hint="该功能正在开发中，敬请期待"
      xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

  </com.google.android.material.textfield.TextInputLayout>

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/ivIconAccountBind2"
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind2"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind2"
    app:tint="@color/icon_background"
    tools:src="@drawable/icon_apple_24"
    xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnAccountBind3"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/text_field_outlined_top_space_height"
    android:textAllCaps="false"
    android:textSize="@dimen/input_font_size_min"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind3"
    app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind3"
    tools:text="绑定"
    xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/layoutAccountBind3"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:clickable="false"
    android:enabled="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:layout_constraintEnd_toStartOf="@+id/btnAccountBind3"
    app:layout_constraintStart_toEndOf="@+id/ivIconAccountBind3"
    app:layout_constraintTop_toBottomOf="@+id/layoutAccountBind2"
    xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/tbAccountBind3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="false"
      android:enabled="false"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:inputType="text"
      tools:hint="未绑定"
      xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

  </com.google.android.material.textfield.TextInputLayout>

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/ivIconAccountBind3"
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBind3"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
    app:layout_constraintTop_toTopOf="@+id/layoutAccountBind3"
    app:tint="@color/icon_background"
    tools:src="@drawable/icon_qq_24"
    xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvAccountBindTip"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:textColor="@color/text_primary"
    app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
    app:layout_constraintTop_toBottomOf="@+id/layoutAccountBind3"
    tools:text="解绑第三方账号需要已绑定手机号才能解绑，如果要将已绑定第三方账号换绑至另一个账号，可以使用 [关于-此软件-账号注销] 注销已绑定的账号。"
    xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

  <Space
    android:layout_width="wrap_content"
    android:layout_height="@dimen/activity_vertical_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvAccountBindTip" />

</androidx.constraintlayout.widget.ConstraintLayout>
